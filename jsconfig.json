{
    "baseUrl": "./",
    "compilerOptions": {
        "target": "es2020",
        "module": "es2015",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@constants/*": ["src/constants/*"],
            "@assets/*": ["src/contents/*"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/views/components/*"],
            "@layouts/*": ["src/views/layouts/*"],
            "@modules/*": ["src/views/modules/*"],
            "@screens/*": ["src/views/screens/*"],
            "@config/*": ["src/config/*"],
            "@services/*": ["src/services/*"],
            "@styles/*": ["src/styles/*"],
            "@helpers/*": ["src/helpers/*"]
        }
    },
    "exclude": [
        "node_modules", "dist", "public"
    ]
}
